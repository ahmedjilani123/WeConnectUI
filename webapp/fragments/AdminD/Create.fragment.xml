<core:FragmentDefinition xmlns:macros="sap.fe.macros" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns="sap.m">
<Dialog title="Update Notes">
<customHeader>
<OverflowToolbar >

<Title text="Create Notes"></Title>

</OverflowToolbar>
</customHeader>
<content>
<form:SimpleForm >
<form:content>
<Label text="Remark/Note Today"></Label>
<TextArea cols="20" rows="4" value="{WeekCreateM>/currRemark}"></TextArea>
</form:content>
</form:SimpleForm>
</content>
<beginButton>
<Button text="Close" press="CloseUpdatePress"></Button>
</beginButton>
<endButton>
<Button text="Create" press="onSaveNewHandler"></Button>
</endButton>
</Dialog>
</core:FragmentDefinition>