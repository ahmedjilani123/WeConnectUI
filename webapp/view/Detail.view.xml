<mvc:View controllerName="weconnectg.controller.Detail"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
   
 <Page id="DetailId" title="Detail View" showHeader="false" showFooter="true" floatingFooter="true">
 <content>
 	 <ObjectHeader 
		icon="sap-icon://customer"
		iconDensityAware="false"
		iconAlt="Ahmed Jilani"
		imageShape="Circle"
		responsive="true"
		title="Ahmed Jilani"
		intro="Senior Developer"
		class="sapUiResponsivePadding--header" >
     
			<ObjectAttribute title="Email address" text="{CreateM>/modifiedBy}" active="false" />
		
            <statuses>
        
            	<ObjectStatus
						
							text="{path:'CreateM>/status_code', formatter:'.formatter.statusText'}"
							active="true"
                            press="StatusChangeHandler"
							inverted="true"
							icon="{path:'CreateM>/status_code', formatter:'.formatter.statusIcon'}"
							state="{path:'CreateM>/status_code', formatter:'.formatter.statusS'}" />
            </statuses>
	</ObjectHeader>
 	<List headerText="Weekly Updates ({= ${CreateM>/daywise/results}.length})" inset="true"
		showSeparators="Inner" items="{CreateM>/daywise/results}"
		>
		<FeedListItem
			sender="{CreateM>createdBy}"
			
			senderPress="onSenderPress"
			iconPress="onIconPress"
			timestamp="{path:'CreateM>date',type:'sap.ui.model.type.Date'}"
            info="Connect Update"

			text="{CreateM>remark}"
			convertLinksToAnchorTags="All"/>
           
            </List>
 </content>
   <footer>
            <OverflowToolbar >
          
            <Button text="Back" press="NavBacktoHome"></Button>
            </OverflowToolbar>
            </footer>
 </Page>
</mvc:View>